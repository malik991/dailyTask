<%- include("partials/header.ejs") %>

<div class="box" id="heading">
    <% if(locals.ejsDayName) { %>
        <h1>
            <%= locals.ejsDayName %>, <%= locals.ejsMonthName %> <%= locals.ejsDate %>
        </h1>
    <% } else{ %>

        <h1>Work List</h1>
        <% } %>    
  </div>
  <div class="box">

    <% if(locals.ejsTodayArray ) { %>

      <% locals.ejsTodayArray.forEach(function(today) { %>
        <div class="item">
          <input type="checkbox">
          <p name="todayItem">
            <%= today %>
          </p>
        </div>
      <% }); %>
            <% if(locals.newTask){ %>
              <div class="item">
              <input type="checkbox">
              <p>
                <%= newTask %>
              </p>
              </div>
            <% } %> 
    <% } else { %>
      
      <% locals.ejsDailyArray.forEach(function (daily) { %>
        <div class="item">
          <input type="checkbox">
          <p name="dailyItem">
            <%= daily %>
          </p>
        </div>
      <% }); %>
          <% if(locals.newTask){ %>
            <div class="item">
            <input type="checkbox">
            <p>
              <%= newTask %>
            </p>
            </div>
          <% } %> 

      <% } %>   
    
    <form class="item" action="/submit" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value="Work" list="">+</button>
      </form>
  </div>

<%- include("partials/footer.ejs") %>